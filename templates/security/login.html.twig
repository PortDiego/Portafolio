{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow-sm border-primary">
            <div class="card-body">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Sesión iniciada ({{ app.user.userIdentifier }}) <a href="{{ path('app_home') }}" class="btn btn-primary">Cerrar sesión</a>
                    </div>
                {% endif %}

                <div class="mb-3">
                    <h1 class="h3 mb-3 font-weight-normal">INICIAR SESIÓN</h1>
                    <label for="username">Email</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                    <label for="password">Contraseña</label>
                    <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

                    <input type="hidden" name="_csrf_token"
                        value="{{ csrf_token('authenticate') }}"
                        >
                </div>
    
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Entrar</button>
                </div>

                <div class="mb-3">
                    <a href="{{ path('app_register') }}" class="btn btn-primary">Registrarte</a>
                </div>

                <div class="mb-3">
                    <a href="{{ path('app_home') }}" class="btn btn-primary">Volver a Home</a>
                </div>

                <div class="mb-3">
                    ¿Has olvidado la contraseña? <a href="{{ path('app_register') }}" class="btn btn-primary">Recuperar Contraseña</a>
                </div>

            </form>
        </div>
    </div>
</div>
    
{% endblock %}
