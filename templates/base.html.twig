<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link rel="stylesheet" href="{{ ('adminkit/css/app.css') }}">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ ('adminkit/css/app.css') }}">
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

        
        {% endblock %}

        {% block javascripts %}
            <script src="{{('adminkit/js/app.js') }}"></script>
            
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                <div class="container-fluid">
                    <a class="navbar-brand" href="{{ path('app_home') }}">AdminKit</a>
                    <div class="collapse navbar-collapse" id="navbar-collapsable">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                <a class="nav-link text-white" href="{{ path('app_login') }}">Log In</a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="btn btn-outline-light">Sign up</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <!-- Main Content -->
            <div class="container my-4">
                {% block content %}{% endblock %}
            </div>
        {% endblock %}
    </body>
</html>