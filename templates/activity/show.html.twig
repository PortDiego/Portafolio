{% extends 'base.html.twig' %}

{% block title %}Activity{% endblock %}

{% block body %}
    <h1>Activity</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activity.id }}</td>
            </tr>
            <tr>
                <th>Categoria</th>
                <td>{{ activity.subcategory.category.nameCat }}</td>
                <td>{{ activity.subcategory.name }}</td>
                
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ activity.date ? activity.date|date('d-m-Y') : '' }}</td>
            </tr>
        </tbody>
    </table>
    {# Nueva secci칩n para im치genes asociadas #}
    <h2>Im치genes</h2>
    <ul>
        {% for imagen in activity.imagenes %}
            <li>
                <img src="{{ asset('uploads/' ~ imagen.url) }}" alt="Imagen {{ loop.index }}" style="max-width: 200px; max-height: 200px;">
            </li>
        {% else %}
            <li>No hay im치genes asociadas a esta actividad.</li>
        {% endfor %}
    </ul>

    <a href="{{ path('app_activity_index') }}">back to list</a>

    <a href="{{ path('app_activity_edit', {'id': activity.id}) }}">edit</a>

    {{ include('activity/_delete_form.html.twig') }}
{% endblock %}
